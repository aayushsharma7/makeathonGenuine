{
  "manifest_version": 3,
  "name": "OpenCourse Tracker",
  "version": "1.0.0",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "http://localhost:3000/*", 
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background":{
     "service_worker": "background.js",
     "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
